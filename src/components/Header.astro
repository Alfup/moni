---
const sections = [
  { name: '/community', href: '#community' },
  { name: '/planets', href: '#planets' },
  { name: '/roadmap', href: '#roadmap' }
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-black/20 backdrop-blur-lg border-b border-white/10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="text-2xl text-space-text-light hover:text-white/80 transition-colors flex items-center gap-2 tracking-tight">
          <img src="/logo2.png" alt="UAP Logo" class="h-8 w-auto" />
          <span>UAP.money</span>
        </a>
      </div>
      <nav class="hidden md:block">
        <ul class="flex space-x-8">
          {sections.map(section => (
            <li>
              <a
                href={section.href}
                class="text-lg text-space-text hover:text-space-text-light transition-colors tracking-tight"
              >
                {section.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>
      <button
        type="button"
        class="md:hidden text-space-text hover:text-space-text-light"
        aria-label="Toggle menu"
        id="menuButton"
      >
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="md:hidden hidden" id="mobileMenu">
    <div class="px-2 pt-2 pb-3 space-y-1 bg-black/20 backdrop-blur-lg">
      {sections.map(section => (
        <a
          href={section.href}
          class="block px-3 py-2 text-base text-space-text hover:text-space-text-light transition-colors tracking-tight"
        >
          {section.name}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  const menuButton = document.getElementById('menuButton');
  const mobileMenu = document.getElementById('mobileMenu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!menuButton?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
      mobileMenu?.classList.add('hidden');
    }
  });
</script>
