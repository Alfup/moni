---
const sections = [
  { name: '/vision', href: '#community' },
  { name: '/planets', href: '#planets' },
  { name: '/roadmap', href: '#roadmap' }
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-black/20 backdrop-blur-lg border-b border-white/10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="text-2xl text-space-text-light hover:text-white/80 transition-colors flex items-center gap-2 tracking-tight">
          <img src="/logo2.png" alt="UAP Logo" class="h-8 w-auto" />
          <span>UAP.money</span>
        </a>
      </div>
      <div class="flex items-center space-x-8">
        <nav class="hidden md:block">
        <ul class="flex space-x-8">
          {sections.map(section => (
            <li>
              <a
                href={section.href}
                class="text-lg text-space-text hover:text-space-text-light transition-colors tracking-tight"
              >
                {section.name}
              </a>
            </li>
          ))}
        </ul>
        </nav>
        <div class="hidden md:flex items-center space-x-4">
          <a href="https://t.me/UAP_money_official" target="_blank" rel="noopener noreferrer" class="text-space-text hover:text-space-text-light transition-colors">
            <svg viewBox="0 0 24 24" class="h-5 w-5 fill-current">
              <path d="M22.265 2.428a2.048 2.048 0 0 0-2.078-.324L2.266 9.339a2.043 2.043 0 0 0 .104 3.818l3.625 1.261 2.02 6.682a2.044 2.044 0 0 0 3.809.288l2.074-4.182 4.09 2.611a2.041 2.041 0 0 0 3.164-1.286l3.109-14.192a2.047 2.047 0 0 0-1.996-1.911zM3.171 11.552l15.754-6.361-8.875 7.461zm7.448 5.831l-1.499 3.022-1.469-4.857 4.758-4.001-1.517 4.468a2.045 2.045 0 0 0 .294 1.912l-.567-.544zm5.195-.391l-3.239-2.068 6.455-8.963z"/>
            </svg>
          </a>
          <a href="https://x.com/intent/user?screen_name=UAP_money" target="_blank" rel="noopener noreferrer" class="text-space-text hover:text-space-text-light transition-colors">
            <svg viewBox="0 0 24 24" class="h-5 w-5 fill-current">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a href="mailto:contact@uap.money" class="text-space-text hover:text-space-text-light transition-colors">
            <svg viewBox="0 0 24 24" class="h-5 w-5 fill-current">
              <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z"/>
              <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z"/>
            </svg>
          </a>
        </div>
      </div>
      <button
        type="button"
        class="md:hidden text-space-text hover:text-space-text-light"
        aria-label="Toggle menu"
        id="menuButton"
      >
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="md:hidden hidden" id="mobileMenu">
    <div class="px-2 pt-2 pb-3 space-y-3 bg-black/20 backdrop-blur-lg">
      {sections.map(section => (
        <a
          href={section.href}
          class="block px-3 py-2 text-base text-space-text hover:text-space-text-light transition-colors tracking-tight"
        >
          {section.name}
        </a>
      ))}
      <div class="flex items-center space-x-4 px-3 pt-2 border-t border-white/10">
        <a href="https://t.me/UAP_money_official" target="_blank" rel="noopener noreferrer" class="text-space-text hover:text-space-text-light transition-colors">
          <svg viewBox="0 0 24 24" class="h-5 w-5 fill-current">
            <path d="M22.265 2.428a2.048 2.048 0 0 0-2.078-.324L2.266 9.339a2.043 2.043 0 0 0 .104 3.818l3.625 1.261 2.02 6.682a2.044 2.044 0 0 0 3.809.288l2.074-4.182 4.09 2.611a2.041 2.041 0 0 0 3.164-1.286l3.109-14.192a2.047 2.047 0 0 0-1.996-1.911zM3.171 11.552l15.754-6.361-8.875 7.461zm7.448 5.831l-1.499 3.022-1.469-4.857 4.758-4.001-1.517 4.468a2.045 2.045 0 0 0 .294 1.912l-.567-.544zm5.195-.391l-3.239-2.068 6.455-8.963z"/>
          </svg>
        </a>
        <a href="https://x.com/intent/user?screen_name=UAP_money" target="_blank" rel="noopener noreferrer" class="text-space-text hover:text-space-text-light transition-colors">
          <svg viewBox="0 0 24 24" class="h-5 w-5 fill-current">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a href="mailto:contact@uap.money" class="text-space-text hover:text-space-text-light transition-colors">
          <svg viewBox="0 0 24 24" class="h-5 w-5 fill-current">
            <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z"/>
            <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const menuButton = document.getElementById('menuButton');
  const mobileMenu = document.getElementById('mobileMenu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!menuButton?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
      mobileMenu?.classList.add('hidden');
    }
  });
</script>
